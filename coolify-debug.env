# Coolify Debug Environment Variables
# Use these variables in Coolify for better debugging

# Django Settings
DEBUG=False
DJANGO_SETTINGS_MODULE=apibase.settings

# Database Configuration (External PostgreSQL)
DB_HOST=your-postgres-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Django Admin User (Auto-created)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your_secure_password

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_DEFAULT_REGION=us-east-1

# Application Settings
SECRET_KEY=your_very_long_secret_key_here
ALLOWED_HOSTS=your-domain.com,*.coolify.io,localhost,127.0.0.1

# Port Configuration (Coolify uses different ports)
PORT=8000

# Logging
PYTHONUNBUFFERED=1
DJANGO_LOG_LEVEL=INFO
